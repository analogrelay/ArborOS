{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "build",
            "command": "bootimage",
            "args": [
                "build"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "process",
            "label": "run",
            "command": "bootimage",
            "args": [
                "run"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "type": "process",
            "label": "start-debugging",
            "command": "bootimage",
            "args": [
                "run",
                "--",
                "-s",
                "-S"
            ],
            "isBackground": true,
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "type": "process",
            "label": "test",
            "command": "cargo",
            "args": [
                "test"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}